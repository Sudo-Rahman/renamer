{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:allow-join",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "fs:allow-stat",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    {
      "identifier": "fs:read-dirs",
      "allow": [
        {
          "path": "$HOME/*",
          "recursive": true
        }
      ]
    },
    "fs:allow-read",
    "fs:allow-write",
    "dialog:default",
    "dialog:default"
  ]
}